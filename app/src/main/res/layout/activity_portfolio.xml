<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent"
    tools:context=".PortfolioActivity">
    <LinearLayout
        android:padding="34dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etName"
            android:hint="@string/name"
            android:textColor="@color/black"
            android:padding="15dp"
            android:textColorHint="#5D5D5D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:minHeight="48dp" />

        <EditText android:id="@+id/etCollege"
            android:hint="@string/college"
            android:padding="15dp"
            android:textColorHint="#5D5D5D"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etSkills"
            android:hint="@string/skills_comma_separated"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="15dp"
            android:textColorHint="#5D5D5D"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etProjectTitle"
            android:hint="@string/project_title"
            android:padding="15dp"
            android:textColorHint="#5D5D5D"
            android:layout_width="match_parent"
            android:textColor="@color/black"

            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etProjectDescription"
            android:hint="@string/project_description"
            android:padding="15dp"
            android:textColorHint="#5D5D5D"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/btnSave"
            android:text="@string/save_portfolio"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView android:id="@+id/tvSuccess"
            android:text=""
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/tvResult"
            android:text=""
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>